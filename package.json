{
  "name": "github-searcher",
  "version": "1.0.0",
  "description": "search github user and repository",
  "main": "server/index.ts",
  "author": "Abhilash Thakur <abhilashthakur.sss@gmail.com>",
  "license": "ISC",
  "scripts": {
    "typecheck": "tsc",
    "lint:base": "eslint --ext .js,.json,.ts",
    "lint": "yarn lint:base 'src/**'",
    "server": "tsnd --respawn -r @babel/register src/server/index.ts",
    "build:server": "babel ./src/server -d ./dist --extensions .ts",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "build:client": "webpack --mode production",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "npm run build:client && npm run build:server && node dist/index.js"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint:base --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck && lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@types/axios": "^0.14.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/express-validator": "^3.0.0",
    "@types/file-loader": "^4.2.0",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^14.6.0",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.5",
    "@types/redis": "^2.8.25",
    "@types/redux-persist": "^4.3.1",
    "@types/redux-thunk": "^2.1.0",
    "@types/response-time": "^2.3.4",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "css-loader": "^4.2.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.10.0",
    "prettier": "^2.0.5",
    "source-map-loader": "^1.0.2",
    "style-loader": "^1.2.1",
    "ts-node-dev": "^1.0.0-pre.58",
    "typescript": "^3.9.7",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-infinite-scroller": "^1.2.1",
    "add": "^2.0.6",
    "appmetrics-dash": "^5.3.0",
    "axios": "^0.19.2",
    "compression": "^1.7.4",
