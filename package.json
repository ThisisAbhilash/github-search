    "react-router-dom": "^5.2.0",
    "redis": "^3.0.2",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.3.0",
    "response-time": "^2.3.2",
    "swagger-ui-express": "^4.1.4",
    "yarn": "^1.22.4"
  }
}
